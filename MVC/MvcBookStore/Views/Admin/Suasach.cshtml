@model MvcBookStore.Models.SACH

@{
    ViewBag.Title = "Suasach";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>ĐIỀU CHỈNH THÔNG TIN SÁCH</h2>

@using (Html.BeginForm("Suasach", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Masach)

        <div class="form-group">
            <span class="control-label col-md-2"><b>Mã sách</b></span>
            <div class="col-md-10">
                <div style="font:18px; padding: 5px 0 0 5px">@ViewBag.Masach</div>
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2"><b>Tên sách</b></span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tensach, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tensach, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2"><b>Đơn vị tính</b></span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Donvitinh, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Donvitinh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2"><b>Đơn giá</b></span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Dongia, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Dongia, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2"><b>Mô tả</b></span>
            <div class="col-md-10">
                <textarea name="Mota">@Model.Mota</textarea>
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2"><b>Hình minh họa</b></span>
            <div class="col-md-10">
                Chọn ảnh mới
                <input type="file" name="fileupload" />
                <img src="@Url.Content("~/Images/" + @Model.Hinhminhhoa)" width="120" /> (Ảnh hiện tại)
                @ViewBag.Thongbao
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2"><b>Chủ đề</b></span>
            <div class="col-md-3">
                <div class="form-control">
                    @Html.DropDownList("MaCD")
                </div>
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2"><b>Nhà xuất bản</b></span>
            <div class="col-md-3">
                <div class="form-control">
                    @Html.DropDownList("MaNXB")
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("VỀ TRANG QUẢN LÝ SÁCH", "Sach")
</div>
